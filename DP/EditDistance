#include <iostream>
using namespace std;

#define MAX 11
int dist[MAX][MAX];
int M,N;
char a[MAX];
char b[MAX];

int min(int a, int b){
	return a < b ? a : b;
}
int min(int a, int b,int c){
	return min(min(a,b),c);
}
int editDistance(){
	if (M == 0)
		return N;
	if (N == 0)
		return M;

	for (int i = 0; i <= M; i++)
		for (int j = 0; j <= N; j++)
		{
			if (i == 0)
				dist[i][j] = j;
			else if (j == 0)
				dist[i][j] = i;
			else if (a[i] == b[j])
				dist[i][j] = dist[i - 1][j - 1];
			else
				dist[i][j] = 1 + min(dist[i - 1][j], dist[i][j - 1], dist[i - 1][j - 1]);
		}
	return dist[M][N];
}
int main(){
	//freopen("input.txt", "r", stdin);
	cin >> M>>N;
	for (int i = 1; i <= M; i++)
		cin >> a[i];
	for (int j = 1; j <= N; j++)
		cin >> b[j];

	cout << editDistance() << endl;
	return 0;
}
